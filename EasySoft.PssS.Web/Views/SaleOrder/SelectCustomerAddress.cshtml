@using EasySoft.PssS.Domain.ValueObject;
@using EasySoft.Core.Util;
@using EasySoft.PssS.Web.Resources;

@model EasySoft.PssS.Web.Models.SaleOrder.SelectCustomerAddressModel
@{
    ViewBag.Title = WebResource.Title_AddSaleOrder_SelectCustomerAddress;
    ViewBag.PreviousUrl = string.Format("/SaleOrder/SearchCustomer?groupId={0}&name={1}", Model.QueryGroupId, Model.QueryName);
}
@if (Model.Customers.Count > 0)
{

<div class="row">
    <div class="col-xs-12" >
        @foreach (var customer in Model.Customers)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        @customer.Name &nbsp;&nbsp; @WebResource.Field_Mobile@WebResource.Field_Colon@customer.Mobile
                    </h5>
                </div>
                <div class="panel-body">
                    @foreach (var address in customer.CustomerAddressList)
                    {
                        <div class="row">
                            <div class="col-xs-12" style="padding-bottom:5px; cursor:pointer;">
                                @WebResource.Field_Address@WebResource.Field_Colon@address.Address
                                <br />
                                @WebResource.Field_Linkman@WebResource.Field_Colon@address.Linkman &nbsp;&nbsp; @WebResource.Field_Mobile@WebResource.Field_Colon@address.Mobile
                                <br />
                                <a href="/SaleOrder/Add?addressId=@address.Id&groupId=@Model.QueryGroupId&name=@Model.QueryName">选定这个地址</a>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-xs-12">
                            地址不正确？请<a href="/Customer/Add?source=O">点击这里</a>添加。
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}

<div class="row">
    <div class="col-xs-12">
        没有查找到客户？请<a href="/Customer/Add?source=O">点击这里</a>添加。
    </div>
</div>


