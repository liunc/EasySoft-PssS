
@model EasySoft.PssS.Web.Models.Common.DialogModel

<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="@Model.GetTitleId()" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="@Model.GetTitleId()">
                    @Model.Title
                </h4>
            </div>
            <div class="modal-body" id="@Model.MessageBodyId">
            </div>
            <div class="modal-footer">
                @if (!string.IsNullOrWhiteSpace(Model.FirstButton))
                {
                <button type="button" class="btn btn-success" data-dismiss="modal">
                    @Model.FirstButton
                </button>
                }
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
