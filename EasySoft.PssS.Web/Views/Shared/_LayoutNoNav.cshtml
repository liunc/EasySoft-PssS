@using EasySoft.PssS.Web.Resources;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@WebResource.SystemName</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link href="~/Content/amazeui/css/amazeui.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header data-am-widget="header" class="am-header am-header-default my-header">

            <h1 class="am-header-title">
                <a href="#title-link" class="">@ViewBag.Title</a>
            </h1>
        </header>
        @RenderBody()
        <footer data-am-widget="footer" class="am-footer am-footer-default" data-am-footer="{  }">
            <hr data-am-widget="divider" style="" class="am-divider am-divider-default" />
            <div class="am-footer-miscs ">
                <p>CopyRight©2017 EasySoft Inc.</p>
                <p></p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/amazeui")
    @RenderSection("JsScripts", false)
</body>
</html>
